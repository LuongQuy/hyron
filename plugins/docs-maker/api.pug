<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")

        style
            include ./style/main.css
            include ./style/header.css
            include ./style/content.css
            include ./style/outline.css
            include ./style/editor.css
            include ./style/apiViewer.css

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script
            include ./lib/requestEditor.js
            include ./lib/documentScript.js
            
        
        title 
            =appName
        
    body
        .header
            .app-name
                =appName
            
            .tools
                .input-box
                    input(type='text' placeholder='Type to search ...')
                .search
                    <svg style="width:32px;height:32px" viewBox="0 0 24 24">
                        <path fill="#fff" d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" />
                    </svg>

        .content 
            .outline-place
                
            .api-place
                each apiEntry in apis
                    .api-entry
                        .api-label(tag=apiEntry.method)
                            .method
                                =apiEntry.method
                            .url
                                =apiEntry.url
                                .query-data(url=apiEntry.url, type=apiEntry.type, params=apiEntry.param)
                            .api-tools
                                .tool-item
                                    <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                                        <path fill="#fff" d="M16,4L9,8.04V15.96L16,20L23,15.96V8.04M16,6.31L19.8,8.5L16,10.69L12.21,8.5M0,7V9H7V7M11,10.11L15,12.42V17.11L11,14.81M21,10.11V14.81L17,17.11V12.42M2,11V13H7V11M4,15V17H7V15" />                                    </svg>
                                .tool-item
                                    <svg style="width:24px;height:24px" viewBox="0 0 24 24">
                                        <path fill="#fff" d="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z" />
                                    </svg>
                        
                        .detail
                            .editor-place
                                .label
                                    =apiEntry.type
                                .editor(url=apiEntry.url, type=apiEntry.type, params=apiEntry.param)
                            
                            .result-place
                                .label
                                    ='Response'
                                .result
                            
            
        